<!-- Form Section -->
<section id="form-section" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">คำนวนยอดที่ต้องการ</h2>
        <div class="row">
            <!-- Form 1: ปรินเอกสาร ขาว-ดำ -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">ปริ้นเอกสาร ขาว-ดำ</h5>
                        <form action="/order" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="paperSizeBW" class="form-label">เลือกขนาดกระดาษ</label>
                                <select class="form-select" id="paperSizeBW" name="paperSize" onchange="calculateTotal('BW')">
                                    <option value="" selected>เลือกขนาด</option>
                                    <option value="A4">A4</option>
                                    <option value="A3">A3</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="quantityBW" class="form-label">ใส่จำนวนหน้า</label>
                                <input type="number" class="form-control" id="quantityBW" name="quantity" oninput="calculateTotal('BW')" placeholder="จำนวนหน้า">
                            </div>
                            <div class="mb-3">
                                <label for="totalBW" class="form-label">ยอดรวม</label>
                                <input type="text" class="form-control" id="totalBW" name="total" placeholder="ยอดรวม" readonly>
                            </div>
                            <div class="mb-3">
                              <label for="uploaded_file" class="form-label">เลือกไฟล์</label>
                              <input type="file" class="form-control" id="uploaded_file" name="uploaded_file">
                          </div>
                            <input type="hidden" name="type" value="bw">
                            <button type="submit" class="btn btn-primary w-100">สั่งปริ้น</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Form 2: ปรินเอกสาร สี -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">ปริ้นเอกสาร สี</h5>
                        <form action="/order" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="paperSizeColor" class="form-label">เลือกขนาดกระดาษ</label>
                                <select class="form-select" id="paperSizeColor" name="paperSize" onchange="calculateTotal('Color')">
                                    <option value="" selected>เลือกขนาด</option>
                                    <option value="A4">A4</option>
                                    <option value="A3">A3</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="quantityColor" class="form-label">ใส่จำนวนหน้า</label>
                                <input type="number" class="form-control" id="quantityColor" name="quantity" oninput="calculateTotal('Color')" placeholder="จำนวนหน้า">
                            </div>
                            <div class="mb-3">
                                <label for="totalColor" class="form-label">ยอดรวม</label>
                                <input type="text" class="form-control" id="totalColor" name="total" placeholder="ยอดรวม" readonly>
                            </div>
                            <div class="mb-3">
                              <label for="uploaded_file" class="form-label">เลือกไฟล์</label>
                              <input type="file" class="form-control" id="uploaded_file" name="uploaded_file">
                          </div>
                            <input type="hidden" name="type" value="color">
                            <button type="submit" class="btn btn-primary w-100">สั่งปริ้น</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Form 3: ปริน ภาพถ่าย -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">ปริ้น ภาพถ่าย</h5>
                        <form action="/order" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="paperSizePhoto" class="form-label">เลือกขนาดกระดาษ</label>
                                <select class="form-select" id="paperSizePhoto" name="paperSize" onchange="calculateTotal('Photo')">
                                    <option value="" selected>เลือกขนาด</option>
                                    <option value="4x6">4x6</option>
                                    <option value="5x7">5x7</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="quantityPhoto" class="form-label">ใส่จำนวนรูป</label>
                                <input type="number" class="form-control" id="quantityPhoto" name="quantity" oninput="calculateTotal('Photo')" placeholder="จำนวนรูป">
                            </div>
                            <div class="mb-3">
                                <label for="totalPhoto" class="form-label">ยอดรวม</label>
                                <input type="text" class="form-control" id="totalPhoto" name="total" placeholder="ยอดรวม" readonly>
                            </div>
                            <div class="mb-3">
                              <label for="uploaded_file" class="form-label">เลือกไฟล์</label>
                              <input type="file" class="form-control" id="uploaded_file" name="uploaded_file">
                          </div>
                            <input type="hidden" name="type" value="photo">
                            <button type="submit" class="btn btn-primary w-100">สั่งปริ้น</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

