<!-- JavaScript for Price Calculation -->
<script>
    const prices = {
        BW: { A4: 2, A3: 4 }, // Black and White prices
        Color: { A4: 5, A3: 8 }, // Color prices
        Photo: { "4x6": 10, "5x7": 15 } // Photo prices
    };

    function calculateTotal(type) {
        const paperSize = document.getElementById('paperSize' + type).value;
        const quantity = document.getElementById('quantity' + type).value;
        const totalField = document.getElementById('total' + type);

        if (paperSize && quantity) {
            const pricePerUnit = prices[type][paperSize];
            const total = pricePerUnit * quantity;
            totalField.value = total; // Display total in Thai Baht
        } else {
            totalField.value = '';
        }
    }
</script>

